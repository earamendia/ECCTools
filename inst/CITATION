citHeader("To cite ECCTools in publications use:")

citEntry(
  entry    = "Manual",
  title    = "ECCTools: Tools for modifying the Energy Conversion Chain",
  author       = personList(as.person("Emmanuel Aramendia"),
                            as.person("Matthew Kuperus Heun")),
  year     = "2022",
  note     = "R package version 0.1.1.",
  url      = "https://github.com/earamendia/ECCTools",
  textVersion =   paste(
  "Emmanuel Aramendia, Matthew K. Heun (2022).",
        "ECCTools: Tools for modifying the Energy Conversion Chain",
        "R package version 0.1.1.")
)
